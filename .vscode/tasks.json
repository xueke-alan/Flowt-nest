{
  "version": "2.0.0",
  "tasks": [
    // 执行全部命令
    {
      "label": "Start All",
      "dependsOn": ["NestJS", "BaseApp", "ChildApp"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "start:dev",
      "problemMatcher": [],
      "label": "NestJS",
      "detail": "nest start --watch"
    },
    {
      "type": "npm",
      "script": "dev",
      "problemMatcher": [],
      "label": "BaseApp",
      "detail": "vite --open",
      "options": {
        "cwd": "../Flowt_BaseApp"
      }
    },
    {
      "label": "ChildApp",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "../Flowt_ChildApp"
      }
    },
    // 安装全部依赖
    {
      "label": "pnpm All",
      "dependsOn": ["pnpm NestApi", "pnpm ChildApp", "pnpm BaseApp"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "pnpm NestApi",
      "type": "shell",
      "command": "pnpm i",
    },
    {
      "label": "pnpm ChildApp",
      "type": "shell",
      "command": "pnpm i",
      "options": {
        "cwd": "../Flowt_ChildApp"
      }
    },
    {
      "label": "pnpm BaseApp",
      "type": "shell",
      "command": "pnpm i",
      "options": {
        "cwd": "../Flowt_BaseApp"
      }
    }
  ]
}
